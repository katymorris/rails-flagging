<p id="notice"><%= notice %></p>

<h1>Flags</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Action edited</th>
      <th>Action deleted</th>
      <th>Action contacted</th>
      <th>Action banned</th>
      <th>Resolved</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.reason %></td>
        <td><%= flag.action_edited %></td>
        <td><%= flag.action_deleted %></td>
        <td><%= flag.action_contacted %></td>
        <td><%= flag.action_banned %></td>
        <td><%= flag.resolved %></td>
        <td><%= flag.notes %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

